{
    "roots": [
      "lib"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
        "<rootDir>/node_modules/",
        "<rootDir>/lib/index.js",
        "<rootDir>/lib/error/index.js",
        "<rootDir>/lib/util/index.js"
    ],
    "collectCoverageFrom": [
      "lib/**/*.js"
    ],
    "coverageReporters": [
      "html",
      "lcov"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 99,
        "branches": 99,
        "functions": 99,
        "lines": 99
      }
    }
}
